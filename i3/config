# Window title
# give the focused window a prefix
# bindsym $mod+p title_format "<b>%title</>"

# print all window titles bold
for_window [class=".*"] title_format "%title"

# print window titles of firefox windows red
for_window [class="(?i)firefox"] title_format "<span foreground='orange'>%title</span>"
for_window [class="(?i)brave"] title_format "<span foreground='orange'>%title</span>"
for_window [class="(?i)chromium"] title_format "<span foreground='blue'>%title</span>"
for_window [class="(?i)vimb"] title_format "<span foreground='blue'>Vimb - %title</span>"
for_window [title="(?i)private"] title_format "<span foreground='purple'>%title</span>"

